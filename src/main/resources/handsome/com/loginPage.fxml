<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="handsome.com.LoginController">

 <center>
     <VBox spacing="10">
         <!-- <ImageView fx:id="imageView" fitHeight="200" fitHeight="200"/> -->
         <Label text="Username:" />
         <TextField fx:id="usernameField" />
         <Label text="Password:" />
         <PasswordField fx:id="passwordField" />
         <HBox spacing="10">
             <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />
             <Button fx:id="signupButton" text="Signup" onAction="#handleSignup" />
         </HBox>
     </VBox>
 </center>

</BorderPane>
